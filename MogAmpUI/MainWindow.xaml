        ContentSource="/Pages/Player.xaml" Width="600" Height="420" FontFamily="Leelawadee UI" MinHeight="420" MaxHeight="600" MinWidth="600" MaxWidth="1000" Icon="Images/moogle.ico">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="music">
			<mui:LinkGroup.Links>
				<mui:Link DisplayName="player" Source="/Pages/Player.xaml" />
				<mui:Link DisplayName="playlist" Source="/Pages/Playlist.xaml" />
			</mui:LinkGroup.Links>
        </mui:LinkGroup>
		<mui:LinkGroup DisplayName="bards">
			<mui:LinkGroup.Links>
				<mui:Link DisplayName="connected" Source="/Pages/Bards.xaml" />
			</mui:LinkGroup.Links>
		</mui:LinkGroup>
		<mui:LinkGroup DisplayName="settings">
			<mui:LinkGroup.Links>
				<mui:Link DisplayName="" Source="/Pages/Settings.xaml" />
			</mui:LinkGroup.Links>
		</mui:LinkGroup>
	</mui:ModernWindow.MenuLinkGroups>

	<mui:ModernWindow.TitleLinks>
		<mui:Link DisplayName="help" Source="https://discord.gg/4XGHQ72" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
